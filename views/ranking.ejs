<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
        crossorigin="anonymous">
  <link rel="stylesheet" href="ranking_styles.css">
  <title>University Ranking</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="navbar-brand mb-0 h1 pl-4">Universities</div>
        <button class="navbar-toggler justify-content-end" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item mx-3">
                    <a class="nav-link" href="/main">Home</a>
                </li>
                <li class="nav-item mx-3">
                    <a class="nav-link active" href="/ranking">Rankings</a>
                </li>
            </ul>
        </div>
    </nav>
  <h1 class="mt-5">University Ranking by Country</h1>

  <form action="/ranking" method="get">
    <input type="text" id="countryCode" name="countryCode" placeholder="Enter country code: e.g. kz"required>
    <button type="submit">Search</button>
  </form>

  <% if (universities) { %>
    <h2 class="mt-3">Top 10 universities of <%= searchInput %>:</h2>
    <% if (universities.data && universities.data.rankings) { %>
      <ul id="results">
        <% Object.keys(universities.data.rankings).slice(0, 10).forEach(key => { %>
          <% const university = universities.data.rankings[key]; %>
          <li id="result"><%= `${key}. ${university.name} - ${university.location}` %></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No rankings found for the provided country code.</p>
    <% } %>
  <% } %>

  <footer class="mt-5 text-center">
    <p>Shauenova Adema SE-2204</p>
</footer>

</body>
</html>
